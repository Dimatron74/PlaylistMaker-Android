<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonStyleMain" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textSize">@dimen/text_size_22sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding_10dp</item>
        <item name="iconTint">@color/black</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:scaleType">matrix</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginHorizontal">@dimen/margin_horizontal_16dp</item>
        <item name="cornerRadius">@dimen/corner_radius_16dp</item>
    </style>

    <style name="ButtonStyleSettings">
        <item name="android:paddingHorizontal">@dimen/paddingHorizontal_16dp</item>
        <item name="android:paddingVertical">@dimen/padding_vertical_20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="thumbTint">@color/blue_background</item>
        <item name="trackTint">@color/switch_black_theme_back</item>
        <item name="android:drawableTint">@color/white</item>
    </style>

    <style name="EditStyleSearch">
        <item name="android:background">@color/white</item>
        <item name="android:paddingHorizontal">@dimen/paddingHorizontal_16dp</item>
        <item name="android:layout_marginHorizontal">@dimen/margin_horizontal_16dp</item>
        <item name="android:iconTint">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="iconPadding">@dimen/icon_padding_10dp</item>
        <item name="android:drawableTint">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginVertical">8dp</item>
    </style>

    <style name="ToolbarBase">
        <item name="android:layout_height">@dimen/layout_height_toolbar_56dp</item>
        <item name="android:textSize">@dimen/text_size_22sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="EditSearchImageClear">
        <item name="tint">@color/ic_clear_cancel</item>
    </style>

    <style name="textItemSongTrack">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="textItemArtistDurationTrack">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="imageArrowForSong">
        <item name="tint">@color/white</item>
    </style>

    <style name="textEmptySearch">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginHorizontal">@dimen/layout_wh24dp</item>
    </style>

    <style name="layout_placeholder">
        <item name="android:layout_marginTop">@dimen/layout_marginTop_102dp</item>
    </style>

    <style name="imageRetrySearch">
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="cornerRadius">@dimen/corner_radius_54dp</item>
        <item name="android:paddingLeft">@dimen/padding_6dp</item>
        <item name="android:paddingTop">@dimen/padding_6dp</item>
        <item name="android:paddingRight">@dimen/padding_6dp</item>
        <item name="android:paddingBottom">@dimen/padding_8dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:scaleType">matrix</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:layout_marginTop">@dimen/layout_margin_top_24dp</item>
    </style>

    <style name="messageHint">
        <item name="android:background">@color/black_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="searchHistoryTitle">
        <item name="android:background">@color/black_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment"> center</item>
        <item name="android:textSize">@dimen/text_size_19sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="baseTrackDescription">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="playerTrackName" parent="baseTrackDescription">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/text_size_22sp</item>
    </style>
    <style name="playerArtistName" parent="baseTrackDescription">
        <item name="android:textSize">@dimen/text_size_14sp</item>
    </style>

    <style name="playerDescriptionSong">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_13sp</item>
    </style>
    <style name="playerDescriptionSongLeft" parent="playerDescriptionSong">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="playerDescriptionSongRight" parent="playerDescriptionSong">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="optional_buttons">
        <item name="tint">@color/white</item>
        <item name="backgroundTint">@color/black_background</item>
        <item name="android:layout_width">@dimen/size_button_player_51dp</item>
        <item name="android:layout_height">@dimen/size_button_player_51dp</item>
    </style>

    <style name="playPauseButton">
        <item name="backgroundTint">@color/black_background</item>
    </style>
</resources>